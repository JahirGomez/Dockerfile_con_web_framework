pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'npm install'
                echo 'building...'
            }
       
        }

        stage('Test') {
            steps {
                sh 'npm run test'
                echo 'testing...'
            }
       
        }

        stage('Deploy') {
            steps {
                sh 'docker build -t sicei-${env.GIT_BRANCH}:${env.BUILD_NUMBER}.'
                sh 'npm run build'
                echo 'Deploying...'
            }
       
        }
        
    }
}